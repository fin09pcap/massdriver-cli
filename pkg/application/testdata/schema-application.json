{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://schemas.massdriver.cloud/definitions/types/application.json",
    "title": "Kubernetes Application",
    "description": "A Kubernetes application specification",
    "type": "object",
    "required": [
        "image",
        "resources",
        "ports",
        "envs",
        "connections"
    ],
    "properties": {
        "image": {
            "type": "string",
            "title": "Docker Image",
            "description": "Docker image to run"
        },
        "resources": {
            "type": "object",
            "title": "Resources",
            "description": "CPU and memory resources to allocate for the application",
            "required": [
                "requests"
            ],
            "properties": {
                "requests": {
                    "type": "object",
                    "title": "Requests",
                    "description": "Requested resources",
                    "required": [
                        "cpu",
                        "memory"
                    ],
                    "properties": {
                        "cpu": {
                            "type": "number",
                            "title": "CPU",
                            "description": "Each integer represents a physical CPU. Fractional requests are allowed down to 0.001 (one-thousandths of a CPU)",
                            "minimum": 0.001
                        },
                        "memory": {
                            "type": "object",
                            "title": "Memory",
                            "description": "Memory resources"
                        }
                    }
                }
            }
        },
        "ports": {

        },
        "envs": {

        },
        "connections": {

        }
    }
}